# ============================================
# ORGANIMEDIA - Configuración del Entorno
# ============================================

# Configuración de la aplicación
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5500

# Configuración de la base de datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=organimedia_db

# Configuración de JWT (JSON Web Token)
JWT_SECRET=organimedia_super_secret_key_change_in_production
JWT_EXPIRES_IN=7d

# Configuración de Twilio para SMS (opcional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Configuración de recordatorios
ENABLE_REMINDERS=true
REMINDER_CRON_SCHEDULE="0 9 * * *"  # Todos los días a las 9:00 AM
REMINDER_TIMEZONE=America/Mexico_City

# Configuración de logging
LOG_LEVEL=info
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/organimedia.log

# Configuración de seguridad
CORS_ORIGIN=http://localhost:5500
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de correo electrónico (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@organimedia.com

# ============================================
# NOTAS DE CONFIGURACIÓN:
# ============================================

# 1. PostgreSQL:
#    - Instalar PostgreSQL: https://www.postgresql.org/download/
#    - Crear base de datos: CREATE DATABASE organimedia_db;
#    - Ejecutar script: psql -U postgres -d organimedia_db -f utils/database.sql

# 2. Twilio (para SMS):
#    - Crear cuenta en: https://www.twilio.com/
#    - Obtener Account SID y Auth Token
#    - Comprar número de teléfono

# 3. JWT Secret:
#    - En producción, usar un secreto fuerte y único
#    - Generar con: openssl rand -base64 32

# 4. Para desarrollo local:
#    - Copiar este archivo como .env
#    - Ajustar valores según tu entorno local
#    - No committear el archivo .env real al repositorio

# 5. Variables opcionales:
#    - Si no usas Twilio, deja las variables vacías
#    - El sistema funcionará sin SMS, solo sin recordatorios